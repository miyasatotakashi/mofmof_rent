<%= form_with(model: propert, local: true) do |form| %>
  <% if propert.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(propert.errors.count, "error") %> prohibited this propert from being saved:</h2>

      <ul>
        <% propert.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
    <%= form.number_field :rent %>
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <%= form.number_field :ago %>
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :remarks %>
  </div>

  <hr>

  <%= form.fields_for :stations do |station| %>
    <h4>
    最寄り駅
    <%= station.index + 1 %>
    </h4>
    <div class="field">
    <%= station.label :路線名 %>
    <%= station.text_field :route %>
    </div>

    <div class="field">
    <%= station.label :駅名 %>
    <%= station.text_field :name %>
    </div>

    <div class="field">
    <%= station.label :徒歩分数 %>
    <%= station.number_field :minutes %>
    </div>

  <% end %>
  <div class="actions">
    <%= form.submit :登録する %>
  </div>
<% end %>
