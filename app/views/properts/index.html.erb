<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properts.each do |propert| %>
      <tr>
        <td><%= propert.title %></td>
        <td><%= propert.rent %>円</td>
        <td><%= propert.address %></td>
        <td><%= propert.ago %>年</td>
        <td><%= propert.remarks %></td>
        <td><%= link_to '詳細', propert %></td>
        <td><%= link_to '編集', edit_propert_path(propert) %></td>
        <td><%= link_to '削除', propert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

