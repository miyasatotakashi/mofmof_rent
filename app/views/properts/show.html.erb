<p id="notice"><%= notice %></p>

<h1>観覧</h1>

<p>
  <strong>物件名:</strong>
  <%= @propert.title %>円
</p>

<p>
  <strong>賃料:</strong>
  <%= @propert.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @propert.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @propert.ago %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @propert.remarks %>
</p>

<hr>

  <% @propert.stations.each_with_index do |station, i| %>
    <h3><strong>最寄り駅<%= "#{ i + 1 }" %></strong></h3>

    <p>
    <strong>路線名:</strong>
    <%= station.route %>
  </p>

  <p>
    <strong>駅名:</strong>
    <%= station.name %>
  </p>

  <p>
    <strong>徒歩分数:</strong>
    <%= station.minutes %>分
  </p>
  <% end %>

